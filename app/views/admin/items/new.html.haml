= form_for @item, html: { multipart: true }, url: { action: "create" } do |f|
  = f.label :name
  = f.text_field :name
  = f.label :price
  = f.text_field :price
  = f.file_field :image
  = select_tag("menu[#{:meal_type_id}]", options_from_collection_for_select(MealType.all, :id, :kind))
  = f.submit "Create"